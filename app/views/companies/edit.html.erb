<table border="4pt">
<td>
<h1>Edit Company</h1>
 
<%= form_with(model: @company, local: true) do |form| %>
 
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@company.errors.count, "error") %> prohibited
        this company from being saved:
      </h2>
      <ul>
        <% @company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



<p>
    <%= form.label :name %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp;
    <%= form.text_field :name%>
  </p>

 <p>
    <%= form.label :Country %>
     <%= form.select(:country_id, Country.all.collect{|u| [u.country_name, u.id]}, :prompt => "Select") %>
     
  </p>

  <p>
    <%= form.label :State %>
     <%= form.select(:state_id, State.all.map{|u| [u.state_name, u.id]}, :prompt => "Select") %>
     
  </p>
  <p>
    <%= form.label :City %>
     <%= form.select(:city_id, City.all.collect{|u| [u.city_name, u.id]}, :prompt => "Select") %>
  </p>
  <p>
    <%= form.label :postalcode %>&nbsp&nbsp;
    <%= form.text_field :postalcode %>
</p>
<p>
    <%= form.label :startdate %>&nbsp&nbsp;&nbsp&nbsp;
    <%= form.text_field :startdate %>&nbsp&nbsp;&nbsp&nbsp;
    <%= check_box_tag "Active", 'yes', id:"active" %>Active
  </p>
  <p>
    
  <div class="field">

    <%= form.label :image, "Upload Company's Image" %><br><br>
    <%= form.file_field :image, class: 'photo_upload' %>
    
  </div>
  </p>
 
   <p>
    <%= form.submit %>&nbsp&nbsp&nbsp&nbsp&nbsp<%= button_to 'Back', companies_path, :method => "get" %><%= button_to 'Go To Index', companies_path, :method => "get" %>
    <%= button_to 'Back To Home', welcome_index2_path, :method => "get" %>

  </p>
<% end %>
</td></table>