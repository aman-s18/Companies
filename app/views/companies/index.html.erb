<h1>Listing companies</h1>
 
<table border="4pt" style="background-color:powderblue;">
  <tr>
    <th>&nbsp&nbsp&nbsp;Name&nbsp&nbsp&nbsp;</th>
    <th>&nbsp&nbsp&nbsp;Country&nbsp&nbsp&nbsp;</th>
    <th>&nbsp&nbsp&nbsp;State&nbsp&nbsp&nbsp;</th>
    <th>&nbsp&nbsp&nbsp;City&nbsp&nbsp&nbsp;</th>
    <th>&nbsp&nbsp&nbsp;Postal Code&nbsp&nbsp&nbsp;</th>
    <th>&nbsp&nbsp&nbsp;Start Date&nbsp&nbsp&nbsp;</th>
    <th>&nbsp&nbsp&nbsp;Active&nbsp&nbsp&nbsp;</th>
    <th colspan="3">&nbsp&nbsp&nbsp;CRUD&nbsp&nbsp&nbsp;</th>
  </tr>
 
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.country %></td>
      <td><%= company.state %></td>
      <td><%= company.city %></td>
      <td><%= company.postalcode %></td>
      <td><%= company.startdate %></td>
      <td><%= company.active %></td>


      <td><%= button_to 'Show', company_path(company), :method => "get" %></td>
      <td><%= button_to 'Edit', edit_company_path(company), :method => "get" %></td>
      <td><%= button_to 'Delete', company_path(company),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= button_to 'Add New Company', new_company_path, :method => "get" %><%= button_to 'Back To Home', welcome_index2_path, :method => "get" %>
